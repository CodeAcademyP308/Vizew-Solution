    <script>
        $('#btnSend').click(function (e) {
            console.log($('#contactForm').serialize());

            $.ajax({
                url: '@Url.Action("Contact","Home")',
                type: 'POST',
                data: $('#contactForm').serialize(),
                success: function (response) {
                    swal("Good job!", "You clicked the button!", "success")
                        .then(() => {
